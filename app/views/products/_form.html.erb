<% if @product.errors.present? %>
<p>
    <%= @product.errors.full_messages.join(', ') %>
</p>
<% end %>

<%= form_for @product do |p| %>
<div class="form-group">
    <%= p.label :title %>
    <%= p.text_field(:title, class: 'form-control') %>
</div>
<div class="form-group">
    <%= p.label :description %>
    <%= p.text_area(:description, class: 'form-control') %>
</div>
<div class="form-group">
    <%= p.label :price %>
    <%= p.text_field(:price, class: 'form-control') %>
</div>
    <%= p.submit "Submit", class: 'btn  btn-primary' %>
<% end %>